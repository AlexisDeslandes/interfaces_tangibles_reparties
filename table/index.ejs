<style>
    .puzzle {
        box-sizing: border-box;
        display: none;
        background-color: #73a5ad;
        position: fixed;
        top: 50%;
        left: 50%;
        width: 76em;
        margin-left: -38em;
        height: 60em;
        margin-top: -30em;
        border: 1px solid #ccc;
        text-align: center;
        padding-top: 30px;
        padding-bottom: 20px;
        padding-left: 70px;
    }

    .puzzle h1{
        color:#fff;
        margin-bottom: 10px;
    }

    #puzzle-parent {

        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .puzzle-child {
        flex: 0 0 32%;
        margin-bottom: 9px;
        background-color: unset;
    }

    .puzzle-child img {
        height: auto;
        width: 100%;
    }

    #close-puzzle {
        float: right;
        font-size: 40px;
        color: #007aff;
        border: solid 3px #007aff;
        border-radius: 50%;
        height: 80px;
        background-color: #fff;
        width: 80px;
        line-height: 40px;
        position: relative;
        top: -45px;
        left: 45px;
    }

    #close-puzzle:focus {
        background-color: #F5F5F5;
        outline: unset;
    }

    #puzzle-result{
        display: none;
    }

    .slide-in-fwd-center {
        animation: slide-in-fwd-center 0.6s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
    }

    @keyframes slide-in-fwd-center {
        0% {
            transform: translateZ(-1400px);
            opacity: 0;
        }
        100% {
            transform: translateZ(0);
            opacity: 1;
        }
    }
</style>

